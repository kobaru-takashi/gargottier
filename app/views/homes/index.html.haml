  %script{:async => "", :defer => "defer", :src => "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_MAP_API_KEY']}&callback=initMap"}
  :javascript
    let map
    let geocoder
    const display = document.getElementById('display')
    function initMap(){
      geocoder = new google.maps.Geocoder()
      map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: 35.706638, lng:139.671185},
        zoom: 15,
      });
      var marker = new google.maps.Marker({
        position: {lat: 35.706638, lng:139.671185},
        map: map,
      });
      var infowindow = new google.maps.InfoWindow({
        position: {lat: 35.708150, lng:139.671185},
        map: map,
        content: "東京都中野区中野1-00-00"
      });
      google.maps.event.addListener(infowindow, "closeclick", function() {
        google.maps.event.addListenerOnce(marker, "click", function(event) {
          infowindow.open(map, marker);
        });
      });
    }

