.main
  .main-block
    .title
    .tag
    .reservation-bar
    .reservation-content ご予約内容
    .reservation__date
      .reservation__date__header
        .reservation__date__header__left
          .reservation__date__header__left__name ご来店日
          .reservation__date__header__left__required 必須
        .reservation__date__header__rigth
          =@events.date
      .reservation__date__header
      = form_with model: @reservation, local:true do |f|
        .reservation__date__header__left
          .reservation__date__header__left__name ご来店時間
          .reservation__date__header__left__required 必須
        .reservation__date__header__right
        = f.select :reservation_time, Reservation.reservation_times.keys, {prompt: "選択してください"}, class: "reservation__date__header__rigth__bar"
      .reservation__date__header
      = form_with model: @reservation, local:true do |f|
        .reservation__date__header__left
          .reservation__date__header__left__name ご来店人数必須
          .reservation__date__header__left__required 必須
        .reservation__date__header__right
        = f.select :number_of_people, Reservation.number_of_people.keys, {prompt: "選択してください"}, class: "reservation__date__header__rigth__bar"
    .reservation-content ご来店者情報
    .reservation__date
      .reservation__date__middle
        .reservation__date__middle__left
          .reservation__date__middle__left__name 代表者名(全角)
          .reservation__date__middle__left__required 必須
        .reservation__date__middle__right


      .reservation__date__middle
        .reservation__date__middle__left
          .reservation__date__middle__left__name 電話番号(半角数字)
          .reservation__date__middle__left__required 必須
        .reservation__date__middle__right
      .reservation__date__middle
        .reservation__date__middle__left
          .reservation__date__middle__left__name メールアドレス(半角英数)
          .reservation__date__middle__left__required 必須
        .reservation__date__middle__right

    .reservation-content ご要望事項
    .reservation__date__footer
      .reservation__date__footer__left
        .reservation__date__footer__left__name 電話番号(半角数字)
        .reservation__date__footer__left__required 必須
      .reservation__date__footer__right
    

    .confirmation
      .confirmation-note
      .confirmation-note
      .confirmation-btn
  
  = link_to '＜戻る', root_path, class: 'btn'







